<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment">

    <include
        android:id="@+id/include"
        layout="@layout/background_recipes" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView3"
        style="@style/Widget.MaterialComponents.TextView.PageName"
        android:text="@string/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/myRecipes_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_recipes"
        android:textColor="@color/black"
        android:textSize="@dimen/title_big_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintStart_toStartOf="@+id/materialTextView3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecipes_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/myRecipes_textView"
        tools:listitem="@layout/my_recipe_row" />

</androidx.constraintlayout.widget.ConstraintLayout>