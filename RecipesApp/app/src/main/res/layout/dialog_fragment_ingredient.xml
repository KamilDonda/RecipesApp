<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main_activity.edit_recipe.ingredient.IngredientDialogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                style="@style/Base.Widget.MaterialComponents.TextView.ItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/new_ingredient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ingredientNameHint_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_space"
                android:text="@string/new_ingredient_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ingredientName_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/medium_space"
                android:layout_marginVertical="@dimen/small_space"
                style="@style/OutlinedBoxStyle"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingredientNameHint_textView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ingredientName_textInput"
                    style="@style/TextInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ingredientUnitHint_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/medium_space"
                android:text="@string/new_ingredient_unit"
                app:layout_constraintStart_toStartOf="@+id/ingredientNameHint_textView"
                app:layout_constraintTop_toBottomOf="@+id/ingredientName_layout" />

            <RadioGroup
                android:id="@+id/unit_radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_space"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingredientUnitHint_textView" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ingredientAmountHint_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/medium_space"
                android:text="@string/new_ingredient_amount"
                app:layout_constraintEnd_toEndOf="@+id/ingredientName_layout"
                app:layout_constraintTop_toBottomOf="@+id/ingredientName_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ingredientAmount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_space"
                style="@style/OutlinedBoxStyle"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@+id/ingredientName_layout"
                app:layout_constraintStart_toStartOf="@+id/ingredientAmountHint_textView"
                app:layout_constraintTop_toBottomOf="@+id/ingredientAmountHint_textView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ingredientAmount_textInput"
                    style="@style/TextInputStyle"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:textAlignment="center" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_space"
                android:text="@string/cancel"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ingredientNameHint_textView"
                app:layout_constraintTop_toBottomOf="@+id/unit_radioGroup"
                app:rippleColor="@color/red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_space"
                android:text="@string/ok"
                android:textColor="@color/green"
                app:layout_constraintBottom_toBottomOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="@+id/ingredientName_layout"
                app:layout_constraintTop_toTopOf="@+id/cancel_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>