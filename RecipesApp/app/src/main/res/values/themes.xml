<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TextInputStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerSizeBottomRight">100dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius2" parent="">
        <item name="cornerSizeBottomLeft">200dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.PageName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ItemTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/small_space</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ItemTitle.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:ellipsize">none</item>
        <item name="android:lines">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.ItemTitle.Big">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:ellipsize">none</item>
        <item name="android:lines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

</resources>